<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tamal.deviceinformation.BuildFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/env_environment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Heading" />

        <LinearLayout
            android:id="@+id/env_environment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:text="@string/env_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Heading" />

        <LinearLayout
            android:id="@+id/env_properties"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

</ScrollView>